<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    package="io.github.reme2" >
    
	<!-- 悬浮窗 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:name="io.github.zeroaicy.util.crash.CrashApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:resizeableActivity="true">
        <!-- android:name="io.github.zeroaicy.util.crash.CrashApplication" 这一个是crash崩溃日志功能-->
        <!--安卓11开始必须添加 所有文件访问权限 android:requestLegacyExternalStorage="true"-->
        <!--使用 android:theme="@style/AppTheme.Translucent" 可隐藏默认Toolbar导航栏-->
		
        <activity
            android:exported="true"
            android:name="io.github.reme2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <!-- 如果你啥都不懂 不要动下面 你可以删除 -->
        <!-- 下面崩溃日志功能界面如果你删除了 java文件夹的io 把这里和上面application的name也一并删除了不然会闪退 -->
        <activity
            android:name="io.github.zeroaicy.util.crash.CrashActivity"
            android:exported="false"
            android:process=":crash" />
            <!-- 分享崩溃截图必要 请勿删除 如果使用取消注释 -->
            <!-- 将app/src/main/java/io/github/zeroaicy/util/crash/CrashActivity.java文件的注释也一并删除-->
            <!--provider
				android:name="android.support.v4.content.FileProvider"
				android:authorities="${applicationId}.fileprovider"
				android:exported="false"
				android:grantUriPermissions="true">
				<meta-data
					android:name="android.support.FILE_PROVIDER_PATHS"
					android:resource="@xml/file_paths" />
			</provider-->
    </application>

</manifest>
